<div class="devise-container">
  <h2>Sign up</h2>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
  
    <div class="form-group">
      <%= f.label :username %><br />
      <%= f.text_field :username, class: 'form-control devise-field', placeholder: "Your Username...", autofocus: true %><br />
      <%= f.label :email %><br />
      <%= f.email_field :email, class: 'form-control devise-field', placeholder: "Your Email..." %>
    </div>
  
    <div class="form-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, class: 'form-control devise-field', placeholder: "Enter Password...", autocomplete: "off" %>
    </div>
  
    <div class="form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, class: 'form-control devise-field', placeholder: "Confirm Password...", autocomplete: "off" %>
    </div>
  
    <div class="form-group">
      <%= f.submit "Sign up", class: 'btn btn-success' %>
    </div>
    
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>
