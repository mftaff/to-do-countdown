<h4>Manage Friends</h4>

<table class="table table-hover">
    <tr>
        <th>All People</th>
        <th></th>
        <th>Friend Status</th>
    </tr>
    <%= render partial: 'index', locals: { users: @friends } %> 
    <tr>
        <%= form_tag(users_path, :method => "get", id: "search-form") do %>
            <td>
                <%= text_field_tag :search, params[:search], placeholder: "Find new friends" %>
                <%= submit_tag "search", name: nil %>
            </td>
            <td></td>
            <td></td>
        <% end %>
    </tr>
    <% unless @searched_users.blank? %>
        <%= render partial: 'index', locals: { users: @searched_users } %>
    <% end %>
</table>

