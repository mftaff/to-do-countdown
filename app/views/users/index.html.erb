<h5 class="friends-heading">Manage all your Friends here</h5>

<div class="friend-search">
    <%= form_tag(users_path, method: "get", id: "search-form", remote: true) do %>
            <%= text_field_tag :search, params[:search], placeholder: "Find new friends...", class: 'form-control search-field' %>
            <%= submit_tag "search", name: nil, class: 'btn btn-default btn-sm search-submit' %>
            <%= link_to "Clear", "#", id: "clear-search", class: 'search-clear' %>
    <% end %>
</div>
<table class="table table-hover">
    <tr id="heading">
        <th class="col-md-5 peop-col-1">Friends</th>
        <th class="col-md-3 view-col-2"></th>
        <th class="col-md-4 stts-col-3">Status</th>
    </tr>
    <% if @friends.present? %>
        <% log_info @friends.length %>
        <%= render partial: 'index', locals: { users: @friends } %> 
    <% else %>
        <tr class="user">
            <td>You have no connections yet!</td>
            <td></td>
            <td></td>
        </tr>
    <% end %>
    <tbody id="search-results"></tbody>
</table>
