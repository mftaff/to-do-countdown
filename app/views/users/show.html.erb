<%= expired_task_button %>

<h4>Welcome <i><%= current_user.email %>!</i></h4>

<table class="table table-hover">
    <tr id="heading">
        <th id="task-count">You have <%= pluralize(@tasks.count, "Task").split.insert(1, "active").join ' ' %></th>
        <th>Time remaining</th>
        <% if @user == current_user %>
            <th>Completed yet?</th>
        <% end %>
    </tr>
    <tbody class="all-tasks"><%= render @tasks %></tbody>
    <tbody class="collapse" id="expired-tasks"><%= render @expired_tasks %></tbody>
    <% if @user == current_user %>
        <%= render partial: 'tasks/form', locals: { task: @task } %>
    <% end %>
</table>
